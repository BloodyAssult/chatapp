<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.danial.chatapp.controller.MainController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="200" alignment="TOP_CENTER">
            <Button text="گفتگوی جدید" onAction="#newChat"/>
            <ListView fx:id="chatList">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="مکالمه ۱"/>
                        <String fx:value="مکالمه ۲"/>
                    </FXCollections>
                </items>
            </ListView>
            <Button text="تنظیمات" onAction="#openSettings"/>
        </VBox>
    </left>

    <!-- Main Chat Area -->
    <center>
        <ScrollPane styleClass="scroll-pane" fx:id="chatScrollPane" fitToWidth="true" pannable="true">
            <content>
                <VBox fx:id="chatArea" spacing="10" nodeOrientation="RIGHT_TO_LEFT"> <!-- راست‌چین برای پیام‌ها -->
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <TextArea text="سلام دانیال، این تست رابط کاربری مدرن هست" styleClass="chat-bubble-user" wrapText="true" editable="false" prefRowCount="1" prefHeight="-1" maxHeight="100"/> <!-- اندازه کنترل‌شده -->
                    <TextArea text="سلام! من مدل GPT-5 هستم و آماده پاسخ طولانی‌ام" styleClass="chat-bubble-ai" wrapText="true" editable="false" prefRowCount="1" prefHeight="-1" maxHeight="100"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Message Input Bar -->
    <bottom>
        <HBox styleClass="hbox-input" spacing="10" alignment="CENTER_RIGHT" nodeOrientation="RIGHT_TO_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextArea styleClass="text-field" fx:id="messageField" promptText="پیام خود را اینجا بنویسید..." HBox.hgrow="ALWAYS" nodeOrientation="RIGHT_TO_LEFT" wrapText="true" prefRowCount="1" prefHeight="-1" maxHeight="50"/> <!-- اندازه کنترل‌شده برای ورودی -->
            <Button styleClass="button" text="ارسال" onAction="#sendMessage"/>
        </HBox>
    </bottom>
</BorderPane>